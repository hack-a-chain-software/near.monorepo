{
  "name": "@near/contracts",
  "version": "0.0.1",
  "license": "UNLICENSED",
  "main": "lib/index.ts",
  "scripts": {
    "build:contract": "node compile.js",
    "build:contract:debug": "node compile.js --debug",
    "dev:deploy:contract": "near dev-deploy",
    "deploy:contract": "near deploy",
    "deploy": "npm run build:contract && npm run deploy:contract",
    "prestart": "npm run build:contract:debug && npm run dev:deploy:contract",
    "dev": "nodemon --watch contract/src -e rs --exec \"npm run start\"",
    "test:rust": "npm run build:contract && cargo test -- --nocapture",
    "test:lib": "npm run build:contract && jest"
  },
  "devDependencies": {
    "env-cmd": "~10.1.0",
    "jest": "27",
    "jest-environment-node": "~26.6.2",
    "near-cli": "~2.1.1",
    "nodemon": "~2.0.3",
    "shelljs": "~0.8.4",
    "test": "^0.6.0",
    "ts-jest": "27"
  },
  "dependencies": {
    "@near/ts": "*",
    "@types/uuid": "^8.3.4",
    "near-api-js": "~0.43.1",
    "near-workspaces": "^2.0.0",
    "regenerator-runtime": "~0.13.5",
    "toml": "^3.0.0",
    "uuid": "^8.3.2"
  }
}
